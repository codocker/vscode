#!/bin/bash

ARGS=$(getopt --options l:v: --alternative --longoptions lang:,version: --name 'install' -- "$@")
if [ $? != 0 ]; then
    echo "退出..."
    exit 1
fi

eval set -- "${ARGS}"

while true
do
    case "$1" in
        -l|--lang)
            lang=$2;
            shift
            ;;
        -v|--version)
            version=$2
            shift
            ;;
        --)
            shift
            break
            ;;
        *)
            echo "内部错误"
            exit 1
            ;;
    esac
shift
done

# 默认参数
lang="" && lang=go

# 准备参数
case $lang in
  Go | go | Golang | golang)
    version="" && version=$(curl https://golang.org/VERSION?m=text)
    url="https://go.dev/dl/${version}.linux-amd64.tar.gz"
    filename="${version}.linux-amd64.tar.gz"
    target="development/google/golang"
    ;;

  *)
    version="" && version=$(curl https://golang.org/VERSION?m=text)
    url="https://go.dev/dl/${version}.linux-amd64.tar.gz"
    filename="${version}.linux-amd64.tar.gz"
    target="development/google/golang/"
    ;;
esac

# 下载文件
curl "${url}" --output "${filename}"

# 解压文件
tar -xf "${filename}" -C "${HOME}/${target}/${version}"
